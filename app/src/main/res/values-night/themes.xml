<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FarmForecast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="elevationOverlayEnabled">false</item>
        <item name="elevationOverlayColor">@android:color/transparent</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_medium</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/primary_green</item>
        <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <item name="android:shadowColor">@android:color/transparent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">
            @color/primary_green
        </item>

        <!-- Optional: Navigation bar color -->
        <item name="android:navigationBarColor">@color/black</item>
    </style>
</resources>
