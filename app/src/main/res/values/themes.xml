<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FarmForecast" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="elevationOverlayEnabled">false</item>
        <item name="elevationOverlayColor">@android:color/transparent</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/text_medium</item>
        <item name="colorPrimaryDark">@color/primary_green_dark</item>
        <item name="colorAccent">@color/primary_green</item>
        <item name="android:outlineAmbientShadowColor">@android:color/transparent</item>
        <item name="android:outlineSpotShadowColor">@android:color/transparent</item>
        <item name="android:shadowColor">@android:color/transparent</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>
    <style name="Theme.FarmForecast.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/video</item> <!-- Or match your videoâ€™s start -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="color">@color/video</item>
        <item name="android:fillColor">@color/video</item>
    </style>
</resources>
